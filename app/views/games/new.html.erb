<h1 class="title center d-flex justify-content-center">New Game</h1>
<div class="center d-flex justify-content-center">
  <% @letters.each do |letter| %>
    <div class="btn btn-primary"><%= letter %></div>
  <% end %>
</div>
<div class="d-flex justify-content-center">
  <form action="/score" method="post" data-turbo="false">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <p>What is the longest word you can find?</p>
    <input type="text" name="word" class="form-control" placeholder="The longest word" aria-describedby="button-addon2">
    <input type="submit" value="Play" class="btn btn-outline-secondary">
  </form>
</div>
